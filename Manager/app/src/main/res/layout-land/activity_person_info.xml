<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_person_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kirill.manager.PersonInfoActivity">

    <TextView
        android:text="Имя:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"/>

    <TextView
        android:text="Фамилия:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/surnameText"
        android:textSize="18dp"
        android:layout_below="@+id/nameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/ageText"
        android:text="Возраст:"
        android:textSize="18dp"
        android:layout_below="@+id/surnameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Дата рождения:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/yearOfBirthText"
        android:textSize="18dp"
        android:layout_below="@+id/ageText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Рейтинг:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingText"
        android:textSize="18dp"
        android:layout_alignBaseline="@+id/surnameText"
        android:layout_alignBottom="@+id/surnameText"
        android:layout_alignLeft="@+id/nationalityText"
        android:layout_alignStart="@+id/nationalityText" />

    <TextView
        android:text="Страна:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/countryText"
        android:textSize="18dp"
        android:layout_above="@+id/yearOfBirthText"
        android:layout_alignLeft="@+id/ratingText"
        android:layout_alignStart="@+id/ratingText" />

    <TextView
        android:text="Национальность:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nationalityText"
        android:textSize="18dp"
        android:layout_marginLeft="87dp"
        android:layout_marginStart="87dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/yearOfBirthText"
        android:layout_toEndOf="@+id/yearOfBirthText" />

</RelativeLayout>
